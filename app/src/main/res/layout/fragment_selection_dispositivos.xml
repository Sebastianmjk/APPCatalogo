<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp.SelectionDispositivos">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/escogerDispositivosTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/inter"
            android:text="@string/escogerDispositivos"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="35sp"
            app:layout_constraintBottom_toTopOf="@+id/dispositivosScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footerVarSelection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/buttonBackSelection"
                style="@style/EstiloBotonSecundario"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:text="@string/textButtonBack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonNextSelection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonNextSelection"
                style="@style/EstiloBotonPrincipal"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="@string/textButtonNext"
                app:layout_constraintBottom_toBottomOf="@+id/buttonBackSelection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonBackSelection"
                app:layout_constraintTop_toTopOf="@+id/buttonBackSelection" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/dispositivosScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/footerVarSelection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/escogerDispositivosTittle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/footerVarSelection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/escogerDispositivosTittle">

                <ImageView
                    android:id="@+id/play5ImageView"
                    style="@style/EstiloSelecciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="25dp"
                    android:contentDescription="@string/descripcionImagenPlayStation5"
                    app:layout_constraintBottom_toTopOf="@+id/pcTorreImageView"
                    app:layout_constraintEnd_toStartOf="@+id/xboxSeriesImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/xboxSeriesImageView"
                    style="@style/EstiloSelecciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="25dp"
                    android:contentDescription="@string/descripcionImagenXboxSeries"
                    app:layout_constraintBottom_toTopOf="@+id/laptopImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/play5ImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/pcTorreImageView"
                    style="@style/EstiloSelecciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="25dp"
                    android:contentDescription="@string/descripcionImagenPc"
                    app:layout_constraintBottom_toTopOf="@+id/celularImageView"
                    app:layout_constraintEnd_toStartOf="@+id/laptopImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/play5ImageView"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/laptopImageView"
                    style="@style/EstiloSelecciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="25dp"
                    android:contentDescription="@string/descripcionImagenLaptop"
                    app:layout_constraintBottom_toTopOf="@+id/nintendoSwitchImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pcTorreImageView"
                    app:layout_constraintTop_toBottomOf="@+id/xboxSeriesImageView"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/celularImageView"
                    style="@style/EstiloSelecciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="31dp"
                    android:contentDescription="@string/descripcionImagenCelular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/nintendoSwitchImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pcTorreImageView"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/nintendoSwitchImageView"
                    style="@style/EstiloSelecciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="31dp"
                    android:contentDescription="@string/descripcionImagenNintendoSwitch"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/celularImageView"
                    app:layout_constraintTop_toBottomOf="@+id/laptopImageView"
                    tools:src="@tools:sample/avatars" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
